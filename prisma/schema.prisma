// Minimal schema for local SQLite testing
// This is a simplified version that works with SQLite
// For production, use the full PostgreSQL schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "windows"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  name          String?
  password      String?
  role          String   @default("user")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  signals       Signal[]
  watchlists    Watchlist[]
  trades        Trade[]
}

model TradingPair {
  id        String   @id @default(cuid())
  symbol    String   @unique
  name      String
  market    String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  
  priceData PriceData[]
  signals   Signal[]
}

model PriceData {
  id             String      @id @default(cuid())
  tradingPairId  String
  timeframe      String
  timestamp      DateTime
  open           Float
  high           Float
  low            Float
  close          Float
  volume         Float
  createdAt      DateTime    @default(now())
  
  tradingPair    TradingPair @relation(fields: [tradingPairId], references: [id])
  
  @@index([tradingPairId, timeframe, timestamp])
}

model Signal {
  id              String      @id @default(cuid())
  userId          String
  tradingPairId   String
  symbol          String
  type            String      // BUY, SELL, HOLD
  status          String      @default("PENDING") // PENDING, ACTIVE, CLOSED
  confidence      Float
  entryPrice      Float?
  stopLoss        Float?
  takeProfit      Float?
  reasoning       String
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  
  user            User        @relation(fields: [userId], references: [id])
  tradingPair     TradingPair @relation(fields: [tradingPairId], references: [id])
  
  @@index([userId, status])
  @@index([symbol, createdAt])
}

model Watchlist {
  id          String   @id @default(cuid())
  userId      String
  name        String
  description String?
  createdAt   DateTime @default(now())
  
  user        User     @relation(fields: [userId], references: [id])
}

model Trade {
  id            String   @id @default(cuid())
  userId        String
  symbol        String
  type          String   // BUY, SELL
  entryPrice    Float
  exitPrice     Float?
  quantity      Float
  profit        Float?
  status        String   @default("open") // open, closed
  openedAt      DateTime @default(now())
  closedAt      DateTime?
  
  user          User     @relation(fields: [userId], references: [id])
  
  @@index([userId, status])
}

model SystemSettings {
  id                  String   @id @default(cuid())
  minSignalConfidence Float    @default(75)
  maxOpenPositions    Int      @default(5)
  riskPerTrade        Float    @default(0.01)
  updatedAt           DateTime @updatedAt
}
